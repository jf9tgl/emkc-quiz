{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020"],
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false,
        "paths": {
            "@shared/*": ["../shared/*"]
        },
        "baseUrl": "."
    },
    "include": ["server.ts", "../shared/**/*"],
    "exclude": ["node_modules", "dist"]
}
