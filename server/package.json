{
    "name": "server",
    "version": "2.0.0",
    "description": "EMKC Quiz Server - Tablet Edition (No Arduino)",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "deploy": "npm run build && pm2 restart emkc-quiz-server || pm2 start ecosystem.config.cjs",
        "pm2:start": "pm2 start ecosystem.config.cjs",
        "pm2:stop": "pm2 stop emkc-quiz-server",
        "pm2:restart": "pm2 restart emkc-quiz-server",
        "pm2:logs": "pm2 logs emkc-quiz-server",
        "pm2:status": "pm2 status"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
