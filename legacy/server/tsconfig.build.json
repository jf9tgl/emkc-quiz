{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "noEmit": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "declaration": false,
        "removeComments": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "paths": {
            "@shared/*": ["../shared/*"]
        },
        "baseUrl": "."
    },
    "include": ["server.ts", "../shared/**/*"],
    "exclude": ["node_modules", "dist", "target"]
}
